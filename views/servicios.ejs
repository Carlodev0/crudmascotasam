<%- include('template/header', {tituloWeb: 'Página de servicios'}); %>

<a href="servicios/crearserv" class="btn btn-success">Crear Servicio</a>

   <% if (arrayServicios.length > 0) { %>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">Id</th>
                <th scope="col">servicio</th>
                <th scope="col">Acción</th>
              </tr>
            </thead>
            <tbody>
                <% arrayServicios.forEach(servicio => { %>
                    <tr>
                        <th scope="row"><%= servicio.id %></th>
                        <td><%= servicio.servicio %></td>
                          <td>
                          <a href="servicios/<%=servicio.id %>" class="btn btn-warning btn-sm">Editar</a>    
                        </td>
                    </tr>
                <% }) %>
            </tbody>
          </table>    
    <% } %>
</div>

<%- include('template/footer'); %>

